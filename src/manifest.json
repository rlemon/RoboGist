{
	"manifest_version": 2,
	"name": "snippet manager",
	"description": "manage small js snippets to be injected into the document",
	"version": "0.0.1",
	"browser_action": {
		"default_icon" : "icon.png",
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["injector.js"]
		}
	],
	"options_page": "options.html",
	"permissions": [
		"activeTab",
		"storage",
		"https://gist.githubusercontent.com/*"
	]
}